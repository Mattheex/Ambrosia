<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    tools:context=".planning.Details.Details">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Photo du plat"
        android:maxHeight="200sp"
        android:src="@drawable/dejeuner" />

    <TextView
        android:id="@+id/mealLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mealLabel"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Recipe"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/recipeList"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="10dp">

            </ListView>

            <TextView
                android:id="@+id/nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nutrition"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <GridView
                android:id="@+id/nutritionList"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>