<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".planning.Day">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dejeuner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petit-déjeuner"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descriptionDej"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nutella, pain de mie, pomme" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/midi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Midi"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descriptionMidi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poisson pané, lentilles" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goûter"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descriptionGout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="clémentine, thé" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/diner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repas du soir"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descriptionDiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="salade, tomate, mais" />
    </LinearLayout>
</LinearLayout>