<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".Profil">


    <TextView
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_200"
        android:text="@string/profil"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/titre_profil_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="Nom :"
            android:textColor="@color/black"
            android:textSize="@dimen/nom_profil_size" />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pseudo :"
            android:textColor="@color/black"
            android:textSize="@dimen/mail_profil_size" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age :"
            android:textColor="@color/black"
            android:textSize="@dimen/age_profil_size" />

        <TextView
            android:id="@+id/sexe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexe :"
            android:textColor="@color/black"
            android:textSize="@dimen/sex_profil_size" />

        <TextView
            android:id="@+id/programme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programme :"
            android:textColor="@color/black"
            android:textSize="@dimen/programme_profil_size" />

        <TextView
            android:id="@+id/allergie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergie :"
            android:textColor="@color/black"
            android:textSize="@dimen/allergie_profil_size" />

        <TextView
            android:id="@+id/poids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="poids :"
            android:textColor="@color/black"
            android:textSize="@dimen/poids_profil_size" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <Button
        android:id="@+id/changePoids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:text="Mettre Ã  jour le poids" />

    <EditText
        android:id="@+id/poidsajour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:width="200px"
        android:hint="Poids"/>

</LinearLayout>

</LinearLayout>
